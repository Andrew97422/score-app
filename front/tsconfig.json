{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "strict": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "files": [
      "src/main.ts",
      "src/polyfills.ts"
  ],
  "include": [
      "src/**/*.d.ts"
  ],
  "angularCompilerOptions": {
    "strictTemplates": false
  }
}